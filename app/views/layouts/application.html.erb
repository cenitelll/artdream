<!DOCTYPE html>
<html>
  <head>
    <title>ArtDream</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    <%= javascript_import_module_tag "scroll" %>

    <%# <%= yield(:head) %>

  </head>

  <body>
  <header class="p-3 bg-dark text-white">
      <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
        <a href="/" class="d-flex align-items-center mb-2 mb-lg-0 text-white text-decoration-none">
          <svg class="bi me-2" width="0" height="32" role="img" aria-label="Logo"><%= image_tag("logo.svg", size: "50x42") %></svg>
          <span class="fs-4">ArtDream</span>
        </a>
        <ul class="nav col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0 mt-1">
          <li> <%= link_to "New pin", new_pin_path,  class: "nav-link px-2 text-white"%> </li>
        </ul>

        <%# <form class="col-12 col-lg-auto mb-3 mb-lg-0 me-lg-3">
          <input type="search" class="form-control form-control-dark" placeholder="Search..." aria-label="Search">
        </form> %>

        <div class="text-end">
          <% if user_signed_in? %>
            <%= link_to "Logout", destroy_user_session_path, class: "btn btn-outline-light me-2", 'data-turbo-method': :delete%>
            <%= link_to 'Edit Profile', edit_user_registration_path, class: "btn btn-warning" %>
          <% else %>
            <%= link_to 'Login', new_user_session_path, class: "btn btn-outline-light me-2" %>
            <%= link_to 'Sign-up', new_user_registration_path, class: "btn btn-warning" %>
          <% end %>
        </div>
      </div>
  </header>

    <%# <div class = "container"> %>
      <%# <p class="notice"><%= notice %></p>
      <%# <p class="alert"><%= alert %></p>
      <%= yield %>
    <%# </div> %>
  </body>
</html>
